<div class="container-fiuld reservations">
  <h4 class="pb-4">予約済みルーム一覧</h4>
  <table>
    <thead>
      <tr align="center">
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>合計料金</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>予約確定日時</th>
      </tr>
    </thead>
    <tbody>
      <% @current_user.reserved_rooms.each do |reserved_room|%>
      <% room = Room.find_by(id: reserved_room.room_id)%>
      <tr>
        <td><a href="/users/reservations/<%= reserved_room.id %>">
            <img class="room-posts-image" src="<%= "/room_photos/#{room.room_photo}" %>"></a></td>
        <td class="posts-name"><a href="/users/reservations/<%= reserved_room.id %>"><%= room.room_name %></a></td>
        <td class="posts-content"><%= room.room_info %></td>
        <td class="price-icon"><%= room.price %></td>
        <td><%= room.created_at %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>