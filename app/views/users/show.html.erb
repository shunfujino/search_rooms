<div class="container-fiuld user">
  <div class="row">
    <div class="col-lg-2 user-nav user-nav-pc d-lg-block d-none">
      <ul>
        <li class=""><a href="/users/<%=@user.id %>/account">アカウント</a></li>
        <li class="active"><a href="/users/<%=@user.id %>/profile">プロフィール</a></li>
      </ul>
    </div>
    <div class="col-lg-2 user-nav user-nav-mobile d-lg-none">
      <ul>
        <li class=""><a href=" /users/<%=@user.id %>/account">アカウント</a></li>
        <li class="active"><a href="/users/<%=@user.id %>/profile">プロフィール</a></li>
      </ul>
    </div>
    <div class="col-lg-10 user-view">
      <div class="user-view-box">
        <div class="update-content">
          <div class="row">
            <h5>プロフィール</h5>
          </div>
        </div>
        <form class="edit_user" id="edit_user_781" enctype="multipart/form-data" action="/users/<%= @user.id%>/update"
          accept-charset="UTF-8" method="post">
          <div class="update-content">
            <div class="row">
              <div class="col-md-6 offset-md-3">
                <div class="icon-box">
                  <img alt="アイコン画像" class="icon-image host-icon" src="/assets/default_icon.jpg">
                </div>
              </div>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a" for="user_icon">アイコン画像</label>
              <input class="mb-4 col-md-9" placeholder="アイコン画像をアップロード" type="file" name="user_icon" id="user_icon">
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a" for="user_name">名前</label>
              <input class="form-control mb-4 col-md-9" placeholder="名前を入力" type="text" value=<%= @user.user_name %>
                name="user_name" id="user_name">
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a" for="user_info">自己紹介</label>
              <textarea rows="5" class="form-control mb-4 col-md-9" placeholder="自己紹介を入力" name="user_info"
                id="user_info"></textarea>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <input type="submit" name="commit" value="更新" class="col-md-2 btn btn-primary mx-3"
                data-disable-with="更新">
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>