<div class="container room-show">
  <div class="row">
    <div class="col-md-8">
      <img alt="部屋画像" class="room-show-image" src="<%= "/room_photos/#{@room.room_photo}" %>" %>
      <div class="room-show-detile">
        <div class="room-show-detile-icon">
          <a href="/"><img class="host-icon"
              src="<%= "/user_icons/#{User.find_by(id: @room.owner_id).user_icon}" %>"></a>
        </div>
        <div class="room-show-profile">
          <p class="room-show-profile-name"><%= @room.room_name %></p>
          <p class="room-show-profile-address"><%= @room.address %></p>
        </div>
      </div>
      <p class="room-show-detile-content"><%= @room.room_info %></p>
    </div>
    <div class="col-md-4">
      <div class="room-show-nav">
        <% @booking.errors.full_messages.each do |message| %>
        <div class="error-message">
          <%= message %>
        </div>
        <% end %>
        <h5 class="price-icon"><%= @room.price %> / 日</h5>
        <div class="room-show-date-select">
          <form action="/bookings/new" accept-charset="UTF-8" method="get">
            <label for="checkin">開始日</label>
            <input type="date" name="checkin" id="checkin" value="" class="form-control mb-4">
            <label for="checkout">終了日</label>
            <input type="date" name="checkout" id="checkout" value="" class="form-control mb-4">
            <label for="count_guest">人数</label>
            <input type="number" name="count_guest" id="count_guest" value="" class="form-control mb-4">
            <input type="hidden" name="room_id" id="room_id" value="<%= @room.id %>">
            <input type="hidden" name="guest_id" id="room_id" value="<%= @current_user.id %>">
            <input type="submit" name="commit" value="予約する" class="btn btn-primary form-control"
              data-disable-with="予約する">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>